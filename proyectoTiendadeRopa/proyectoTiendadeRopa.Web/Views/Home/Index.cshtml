@model List<TiendadeRopa.BL.Producto>
@{
    ViewBag.Title = "Inicio";
}

<section class="story-area left-text center-sm-text">
    <div class="container">
        <div class="heading"><h3>Escoja de nuestras pizzas</h3></div>
        <div class="row">
        @foreach (var producto in Model
            .Where(r=> r.Categoria.Descripcion == "pizzas")
            .Take(4)
            .OrderBy(r => Guid.NewGuid())
            )
        {


                <div class="col-lg-3 col-md-4  col-sm-6 ">
                    <div class="center-text mb-30">
                        <div class="ïmg-200x mlr-auto pos-relative">
                            <h6 class="ribbon-cont color-white"><div class="ribbon primary"></div><b>OFERTA</b></h6>
                            <img src="@(ViewBag.adminWebsiteUrl + producto.UrlImagen)" alt="">
                        </div>
                        <h5 class="mt-20">@producto.Descripcion</h5>
                        <h4 class="mt-5 color-primary"><b>L @producto.Precio</b></h4>
                    </div><!--text-center-->
                </div><!-- col-md-3 -->
        }
        </div><!-- row-->
    </div><!-- container -->
</section>
<section class="bg-lite-blue">
    <div class="container">
        <div class="row">
        @foreach (var producto in Model)
        {
            <div class="col-md-6">
                <div class="sided-90x mb-30 ">
                    <div class="s-left"><img class="br-3" src="@(ViewBag.adminWebsiteUrl + producto.UrlImagen)" alt="Menu Image"></div><!--s-left-->
                    <div class="s-right">
                        <h5 class="mb-10"><b>@producto.Descripcion</b><b class="color-primary float-right">@producto.Precio</b></h5>
                        <p class="pr-70"> </p>
                    </div><!--s-right-->
                </div><!-- sided-90x -->
            </div><!-- food-menu -->

        }
            
           
        </div><!-- row -->
    </div><!-- container -->
</section>

